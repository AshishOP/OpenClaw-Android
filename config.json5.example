{
  // OpenClaw Configuration for Android / Termux
  
  "models": {
    "providers": {
      "nvidia": {
        "apiKey": "${NVIDIA_API_KEY}",
        "baseUrl": "https://integrate.api.nvidia.com/v1",
        "models": [
           { "id": "nvidia/glm-4-9b-chat", "name": "GLM-4 (NVIDIA)" }
        ]
      },
      "google": {
        "apiKey": "${GOOGLE_API_KEY}"
      }
    }
  },

  "memory": {
    "backend": "athena",
    "citations": "auto"
  },

  "channels": {
    "telegram": {
      "enabled": true,
      "botToken": "${TELEGRAM_BOT_TOKEN}",
      "dmPolicy": "open",
      "allowFrom": ["*"]
    },
    "discord": {
      "enabled": true,
      "token": "${DISCORD_BOT_TOKEN}",
      "dmPolicy": "open",
      "allowFrom": ["*"]
    },
    "whatsapp": {
      "enabled": true,
      "dmPolicy": "open",
      "allowFrom": ["*"]
    }
  },

  "gateway": {
    "bind": "loopback", // Use 127.0.0.1 by default
    "port": 18789
  }
}
